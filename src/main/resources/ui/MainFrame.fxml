<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import ploiu.ui.NavBar?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0" styleClass="frame"
         stylesheets="@styles.css" type="javafx.scene.layout.AnchorPane"
         xmlns="http://javafx.com/javafx/17.0.2-ea">
    <children>
        <VBox>
            <HBox>
                <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" onKeyPressed="#searchBarKeyPressed"
                           prefHeight="24.0" prefWidth="333.0" styleClass="search-bar"/>
                <Button fx:id="searchButton" layoutX="347.0" layoutY="14.0" mnemonicParsing="false"
                        onAction="#searchButtonClicked" styleClass="search-button" text="Search"/>
            </HBox>
            <NavBar receiver="$folderEvents" fx:id="navigationBar" layoutX="14.0" layoutY="45.0" styleClass="nav-bar"/>
            <VBox>
                <FlowPane fx:id="folderPane" layoutX="13.0" layoutY="64.0" prefWidth="777.0" styleClass="item-row"/>
                <FlowPane fx:id="filePane" layoutX="13.0" layoutY="64.0" prefWidth="777.0" styleClass="item-row"/>
            </VBox>
        </VBox>

    </children>
</fx:root>
